{
  "name": "msg-2-eml",
  "version": "1.0.0",
  "description": "Convert MSG files to EML format",
  "type": "module",
  "scripts": {
    "build:server": "tsc -p tsconfig.json",
    "build:client": "tsc -p src/client/tsconfig.json && cp src/client/index.html dist/client/",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/index.js",
    "dev": "npm run build && npm start",
    "test": "npm run build:server && npm run test:unit && npm run test:integration",
    "test:unit": "node --test dist/server/msg-to-eml/*/__tests__/*.test.js",
    "test:integration": "node --test dist/server/msg-to-eml.integration.test.js",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check --write src/ && npm run build && npm test",
    "debug": "tsx scripts/debug-conversion.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@kenjiuno/decompressrtf": "^0.1.4",
    "express": "^4.18.2",
    "iconv-lite": "^0.7.2",
    "msg-parser": "^1.0.10",
    "rtf-stream-parser": "^3.8.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "tsx": "^4.7.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "husky": "^9.0.0",
    "typescript": "^5.3.0"
  }
}
